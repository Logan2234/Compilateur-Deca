{
	boolean play = true;
	Player player = new Player();
	Enemy enemy = new Enemy();

	int choice;

	player.Player(60, 170.5);
	enemy.Enemy(80, 210.2);

	while (play){
		println("What do you want to do ?");
		println("1. Attack");
		println("2. Move");
		println("3. Get stats (as player)");
		println("4. Get stats (as entity)");
		println("5. Get stats of the enemy");
		println("6. Quit");
		println("");
		choice = readInt();

		if (choice == 6){
			play = false;
			println("Bye!");
		}

		else if (choice == 5){
			enemy.stats();
		}

		else if (choice == 4){
			(Entity)(player).stats();
		}

		else if (choice == 3){
			player.stats();
