		else if (choice == 2){
			println("An enemy attacked you! ");
			player.getHurt(enemy.getDamage());
			if (player.getVie() <= 0){
				play = false;
				println("Game over!");
			}
		}

		else if (choice == 1){
			println("You attack the enemy! ");
			enemy.getHurt(player.getDamage());
